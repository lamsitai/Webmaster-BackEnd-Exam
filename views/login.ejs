<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Log In</title>

    <%-include('stylesheet_login')%>

</head>

<body>

<div class="container-fluid">
    <div class="container ">
        <div class="row">
            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-xs-12 bg_section_login">
<!--              <img class="logo" src="../public/imgs/cart/bg_login_desk.png" alt=""/>-->
            </div>
            <div class="col-12 m_bg_section_login">
<!--                          <img src="imgs/cart/bg_login_desk.png">-->
            </div>
            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-xs-12 login_section">
                <form class="needs-validation" novalidate>
                    <h1>Log in</h1>
                    <div class="error" id="user-error">
                        Incorrect Username
                    </div>
                    <div class="error" id="pass-error">
                        Incorrect Password
                    </div>
                    <div class="form-row">
                        <input type="text" class="form-control"  id="username" aria-describedby="emailHelp" placeholder="Username" required>
                    </div>
                    <div class="form-row">
                        <input type="password" class="form-control" id="password" placeholder="Password" required>
                    </div>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="login_check">
                        <label class="form-check-label" for="login_check">Stay signed in</label>
                        <a href="#">Forgot password?</a>
                    </div>
                    <button type="submit" class="btn btn-primary">LOG IN</button>
                    <button type="submit" class="btn btn-outline-primary"><a href="/signin">SIGN UP</a></button>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="js/login.js"></script>
</body>
</html>